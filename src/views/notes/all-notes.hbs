<div class="row">
    {{#each notes}}
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <div class="card-title">
                        <h4 class="card-title d-flex justify-content-between align-items-center">
                            {{title}} 
                            <a href="/notes/edit/{{_id}}"><i>Edit</i></a>
                        </h4> 
                        <p>{{description}}</p>
                        <!-- DELETE REQUEST -->
                        <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="btn btn-danger btn-block btn-sm">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    {{else}}
        <div class="card mx-auto">
                <div class="card-body">
                    <div class="card-title">
                        <p class="lead">There are not notes yet</p>
                        <a class="btn btn-success btn-block btn-sm" href="/notes/add">Create Note</a>
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
</div>